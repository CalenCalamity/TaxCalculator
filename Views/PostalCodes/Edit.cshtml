@model TaxCalculator.Models.PostalCode

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Postal Code Record</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostalCodeID" />
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxTypeID" class="control-label">Tax Type</label>
                <select asp-for="TaxTypeID" class="form-control">
                    @foreach (TaxType item in ((IEnumerable<TaxType>)ViewData["TaxTypeList"]))
                    {

                        <option value="@item.TaxTypeID">@item.Description</option>
                    }
                </select>
                <span asp-validation-for="TaxTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
