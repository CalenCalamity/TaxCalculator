@model IEnumerable<TaxCalculator.Models.PostalCode>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @foreach (TaxType tax in ViewBag.TaxTypes)
                {
                    if(item.TaxTypeID == tax.TaxTypeID)
                        @Html.Label(tax.Description)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td> 
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostalCodeID" class="btn-sm btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.PostalCodeID" class="btn-sm btn-dark">Details</a>
                <a asp-action="Delete" asp-route-id="@item.PostalCodeID" class="btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
