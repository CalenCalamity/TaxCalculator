@model IEnumerable<TaxCalculator.Models.CalculatedTax>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                R @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td> 
            <td>
                <a asp-action="Details" asp-route-id="@item.CalculatedTaxID" class="btn-sm btn-dark">Details</a>
                <a asp-action="Delete" asp-route-id="@item.CalculatedTaxID" class="btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
