@model TaxCalculator.Models.TaxType

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Tax Type Record</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
